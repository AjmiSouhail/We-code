<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>WeCode</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top bg-info ">
        <div class="navbar-inner ">
            <div class="container">
                <button type="button" class="btn btn-navbar bg-white" data-toggle="collapse" data-target=".nav-collapse" style="display:none">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
               
                <div class="">
                    <ul class="nav " style=" display: flex; align-items: center; ">
                        @Html.ActionLink("We Code", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white " })
                        <li>@Html.ActionLink("ACCUEIL", "Index", "Home")</li>
                        <li>@Html.ActionLink("EMPLOYE", "Index", "Employes")</li>
                        <li>@Html.ActionLink("FORMATION", "Index", "Formations")</li>
                        <li>@Html.ActionLink("INSCRIPTIONS", "Index", "Inscriptions")</li>
                        <li>@Html.ActionLink("PARTICIPATIONS", "Index", "Participers")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div><br /><br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom bg-info"><br />
            <img src="~/logo/fotter.svg" style="width:150px;" class="center-block" />
<br />        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
